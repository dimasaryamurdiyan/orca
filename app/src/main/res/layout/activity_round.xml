<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="10"
    tools:context=".Movers">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:theme="@style/AppThemeact">



        <de.clemenskeppler.materialsearchview.MaterialSearchView
            android:id="@+id/search_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        </de.clemenskeppler.materialsearchview.MaterialSearchView>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:background="@drawable/bgshadow"
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/pic6"
            android:elevation="10dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/namalogo3"
            android:text="USA Network"
            android:fontFamily="sans-serif"
            android:textColor="#494949"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_below="@+id/namalogo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/author3"
            android:text="by Iyin"
            android:fontFamily="sans-serif"
            android:textColor="#494949"
            android:textStyle="italic"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/harga3"
            android:layout_toRightOf="@id/namalogo3"
            android:text="$69"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_alignParentRight="true"
            android:textAlignment="textEnd"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:paddingRight="20dp"
            />
        <TextView
            android:layout_below="@+id/namalogo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deskripsi31"
            android:text="Last Update                    :"
            android:fontFamily="sans-serif"
            android:textColor="#494949"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_below="@+id/deskripsi31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deskripsi32"
            android:text="Created                           :"
            android:fontFamily="sans-serif"
            android:textColor="#494949"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_below="@+id/deskripsi32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deskripsi33"
            android:text="Graphic Files Included  :"
            android:fontFamily="sans-serif"
            android:textColor="#494949"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_below="@+id/deskripsi33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deskripsi34"
            android:text="Resolution                      :"
            android:fontFamily="sans-serif"
            android:textColor="#494949"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_below="@+id/deskripsi34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deskripsi35"
            android:text="Tag                                  :"
            android:fontFamily="sans-serif"
            android:textColor="#494949"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/beli3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BELI"
            android:textSize="23dp"
            android:background="#46D543"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>



</LinearLayout>